<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#ffffff"
    android:backgroundTint="#ffffff"
    android:clickable="false"
    android:contextClickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:layoutDirection="ltr"
    android:nestedScrollingEnabled="false"
    android:orientation="vertical"
    android:touchscreenBlocksFocus="false"
    android:transitionGroup="false"
    tools:context=".BluesnapCheckoutActivity">


    <LinearLayout
        android:id="@+id/express_co_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">


        <ZoomButton
            android:id="@+id/express_co_btn_paypal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout4"
            android:background="@drawable/btn_checkout_paypal_sel" />

        <ZoomButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_checkout_visa_sel"
            android:visibility="invisible" />

        <ZoomButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout4"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_checkout_masterpass_sel"
            android:visibility="invisible" />

        <ZoomButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_checkout_amex_sel"
            android:visibility="invisible" />

    </LinearLayout>


    <TextView
        android:id="@+id/express_co_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/express_co_buttons_layout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="right"
        android:layout_marginBottom="22dp"
        android:text="@string/select_your_express_checkout_method"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/express_co_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/express_co_buttons_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="@string/total" />

    <ProgressBar
        android:id="@+id/progressBarExpressCheckout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="invisible" />

</RelativeLayout>

