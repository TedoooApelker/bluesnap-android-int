<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layoutDirection="ltr"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/spinnerCardTypeImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20sp"
                    android:background="@android:color/white"
                    android:drawablePadding="5dp"
                    android:padding="6sp"
                    android:src="@drawable/new_card"
                    android:layout_marginStart="20sp"
                    android:contentDescription="@string/cardTypeImageText" />

                <TextView
                    android:id="@+id/spinnerLastFourDigitsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20sp"
                    android:background="@android:color/white"
                    android:text="@string/lastFourDigitsHint"
                    android:maxLength="4"
                    android:nextFocusDown="@+id/expDateEditText"
                    android:padding="6sp"
                    android:layout_marginStart="20sp" />

                <TextView
                    android:id="@+id/spinnerExpDateTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="60sp"
                    android:layout_marginRight="2sp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:hint="@string/mm_yy"
                    android:paddingBottom="5sp"
                    android:paddingLeft="1sp"
                    android:paddingTop="5sp"
                    android:layout_marginStart="60sp"
                    android:layout_marginEnd="2sp"
                    android:paddingStart="1sp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
